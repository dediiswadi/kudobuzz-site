---
import Banner from './Banner.astro';

interface FooterLink {
  name: string;
  url: string;
  target?: string;
}

interface FooterColumn {
  title: string;
  links: FooterLink[];
}

interface SocialLink {
  icon: string;
  url: string;
  target?: string;
}

interface FooterBottom {
  text?: string;
  links?: FooterLink[];
}

interface FooterBranding {
  logo?: {
    src: string;
    alt?: string;
  };
  tagline?: string;
}

interface FooterProps {
  columns?: FooterColumn[];
  advancedTitle?: string;
  advancedColumns?: FooterColumn[];
  socialLinks?: SocialLink[];
  bottom?: FooterBottom;
  branding?: FooterBranding;
  showBanner?: boolean;
}

const {
  columns = [],
  advancedTitle = "",
  advancedColumns = [],
  socialLinks = [],
  bottom = {},
  branding = {},
  showBanner = true,
} = Astro.props;
---
{showBanner && (
  <div class="banner-wrapper">
    <Banner />
  </div>
)}

<footer class="footer">
    
  <div class="footer-top">
    {branding.logo?.src && (
      <a class="logo-link" href="/">
        <img class="logo" src={branding.logo.src} alt={branding.logo.alt ?? "Logo"} />
      </a>
    )}
    {(branding.tagline || socialLinks.length > 0) && (
      <div class="footer-content">
        {branding.tagline && <p class="tagline">{branding.tagline}</p>}
        {socialLinks.length > 0 && (
          <div class="social-links">
            {socialLinks.map((item, index) => (
              <a
                key={`${item.icon}-${index}`}
                href={item.url}
                target={item.target ?? "_self"}
                rel={item.target === "_blank" ? "noopener noreferrer" : undefined}
              >
                <img src={item.icon} alt="social" />
              </a>
            ))}
          </div>
        )}
      </div>
    )}
  </div>

  <hr class="divider" />

  <div class="footer-links">
    {columns.map((column, index) => (
      <div key={`col-${index}`}>
        <h4>{column.title}</h4>
        <ul>
          {column.links.map((link) => (
            <li key={link.name}>
              <a
                href={link.url}
                target={link.target}
                rel={link.target === "_blank" ? "noopener noreferrer" : undefined}
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
    
    {advancedTitle && <p class="title">{advancedTitle}</p>}
  <hr class="divider" />
    <div class="footer-links">
      {advancedColumns.map((column, index) => (
        <div key={`advanced-${index}`}>
          <h4>{column.title}</h4>
          <ul>
            {column.links.map((link) => (
              <li key={`${column.title}-${link.name}`}>
                <a
                  href={link.url}
                  target={link.target}
                  rel={link.target === "_blank" ? "noopener noreferrer" : undefined}
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>


  <div class="footer-bottom">
    {bottom.text && <p>{bottom.text}</p>}
    {bottom.links?.length && (
      <ul>
        {bottom.links.map((link, index) => (
          <li key={`bottom-${index}`}>
            <a
              href={link.url}
              target={link.target}
              rel={link.target === "_blank" ? "noopener noreferrer" : undefined}
            >
              {link.name}
            </a>
          </li>
        ))}
      </ul>
    )}
  </div>
</footer>

<style>
.footer {
  background: #1e1f28;
  color: #e2e2e2;
  padding: 200px var(--page-padding) 50px;
  font-family: sans-serif;
}
.footer-top,
.footer-links,
.footer-bottom,
.footer .title,
.footer .divider {
  width: min(100%, var(--container-max));
  margin-left: auto;
  margin-right: auto;
}
.footer-content{
    display:flex;
    width:100%;
    margin-bottom:48px;
}
.logo {
  height: 40px;
  margin-bottom: 48px;
}

.logo-link {
  display: inline-block;
}

footer .title{
    font-size:16px;
    margin: 0px;
    color: #fff;
}
.tagline {
  margin: 0px;
  color: #fff;
  

  
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: 30px; /* 150% */
}

.social-links {
  display: flex;
  gap: 32px;
  
}

.social-links img {
  width: 24px;
  height: 24px;
}

.divider {
  border: none;
  border-top: 1px solid #333;
  margin: 30px 0;
}

.footer-links {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20px;
  margin-bottom: 40px;
}

.footer-links h4 {
  color: #fff;
  font-size: 14px;
  margin-bottom: 10px;
}

.footer-links a {
    display:block;
    padding: 8px 0;
  color: #BCBDC1;
  font-size: 14px;
  text-decoration: none;
  line-height: 20px;
  transition: color 0.25s ease, text-decoration-color 0.25s ease;
}

.footer-links a:hover {
  color: #f28c38;
  text-decoration-thickness: 1px;
}

.footer-bottom {
  
  padding-top: 48px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  
}

.footer-bottom ul {
  display: flex;
  gap: 20px;
}

.footer-bottom a {

  color: #BCBDC1;
  text-decoration: none;
  transition: color 0.25s ease, text-decoration-color 0.25s ease;
}

.footer-bottom a:hover {
  color: #f28c38;
  text-decoration-thickness: 1px;
}
.footer-bottom p{
    font-size:14px;
    color:#BCBDC1;
}

.banner-wrapper {
  position: relative;
  width: min(100%, var(--container-max));
  margin: 0 auto;
}

.banner-wrapper :global(.banner) {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
@media (max-width: 1024px) {
  .footer{ padding: 200px clamp(24px, 6vw, 64px) 50px; }
  .footer-links {
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  }
}
@media (max-width: 7684px) {
 
}
@media (max-width: 650px) {
  .footer{
    padding: 200px 20px 32px;
    text-align:center;
  }
  .footer-content, .footer-links, .footer-bottom{ display:block; }
  .social-links{ display:inline-flex; margin:20px 0; }
  .footer-links{ grid-template-columns: 1fr; }
  .footer-bottom ul{ margin:20px 0; display:inline-flex; }
}
</style>
