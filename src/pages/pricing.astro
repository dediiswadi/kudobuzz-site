---
import Navbar from '../components/Navbar.astro';
import Section from '../components/Section.astro';
import Footer from "../components/Footer.astro";
import AddSpace from "../components/AddSpace.astro";
import Pricing from "../components/Pricing.astro";
import Base from "../layouts/Base.astro";
import { footerLinks } from "../data/footerLinks.js";


const menuItems = [
  {
    label: "Solutions",
    children: [
      {
        icon: "/assets/icons/icon-review-new.svg",
        title: "Product Reviews",
        description: "Collect and display product reviews to build trust.",
        link: "/solutions/product-reviews"
      },
      {
        icon: "/assets/icons/product.svg",
        title: "Social Reviews",
        description: "Leverage social proof to drive conversions.",
        link: "/solutions/social-reviews"
      },
      {
        icon: "/assets/icons/icon-star.svg",
        title: "UGC & Shoppable Videos",
        description: "Turn social content into sales.",
        link: "/solutions/ugc"
      },
      {
        icon: "/assets/icons/product.svg",
        title: "CRO",
        description: "Optimize customer journey with conversion tools.",
        link: "/solutions/cro"
      }
    ]
  },
  { label: "Pricing", link: "/pricing" },
  { label: "Blog", link: "/blog" },
  { label: "Get Help", link: "/help" }
