          { title: "CRO Starter", monthlyPrice: "19", yearlyPrice: "190", description: "Basic CRO tools", features: ["A/B testing", "Heatmaps"], buttonText: "Start Free", buttonLink: "#", moreLink: "#" },
          { title: "CRO Pro", monthlyPrice: "49", yearlyPrice: "490", description: "Advanced CRO", features: ["Personalization", "Advanced reports"], buttonText: "Choose Pro", buttonLink: "#", moreLink: "#" },
